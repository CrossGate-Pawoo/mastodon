!!! XML
%urlset{ xmlns: 'http://www.sitemaps.org/schemas/sitemap/0.9' }
  - @accounts.each do |account|
    %url
      %loc
        = short_account_url(account.username)
      %lastmod
        = account.updated_at.strftime('%Y-%m-%d')
      %priority
        - if account.followers_count > 5000
          = '1.0'
        - elsif account.followers_count > 3000
          = '0.6'
        - elsif account.followers_count > 1000
          = '0.3'
        - else
          = '0.1'
